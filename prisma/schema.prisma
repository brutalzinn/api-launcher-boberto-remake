generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  
}

model ModPack {
  id                String              @id  @default(uuid())
  name              String 
  gameVersion       String
  isModded          Boolean
  createAt          DateTime         @default(now())
  updateAt          DateTime         @updatedAt
  servers Server[]
}

model Server {
  id                String              @id  @default(uuid())
  name              String
  ip String
  port Int
  version           String
  gameVersion         String
  serverId  String
  alias             String
  createAt          DateTime         @default(now())
  updateAt          DateTime         @updatedAt
  server   ModPack @relation(fields: [serverId], references: [id])
}

model LauncherVersion {
  id                Int              @id @default(autoincrement())
  version           String
  createAt          DateTime         @default(now())
  updateAt          DateTime         @updatedAt
}